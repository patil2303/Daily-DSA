import java.util.*;

public class Queue_Day2_Advanced {

    // ==================================================
    // Implementing Stack using Deque
    // ==================================================
    static class StackUsingDeque {
        Deque<Integer> deque = new LinkedList<>();

        public void push(int data) {
            deque.addLast(data);
        }

        public int pop() {
            return deque.removeLast();
        }

        public int peek() {
            return deque.getLast();
        }

        public boolean isEmpty() {
            return deque.isEmpty();
        }
    }

    // ==================================================
    // Implementing Queue using Deque
    // ==================================================
    static class QueueUsingDeque {
        Deque<Integer> deque = new LinkedList<>();

        public void add(int data) {
            deque.addLast(data);
        }

        public int remove() {
            return deque.removeFirst();
        }

        public int peek() {
            return deque.getFirst();
        }

        public boolean isEmpty() {
            return deque.isEmpty();
        }
    }

    // ==================================================
    // Generate Binary Numbers from 1 to N
    // ==================================================
    public static void printBinary(int n) {
        Queue<String> q = new LinkedList<>();
        q.add("1");

        while (n-- > 0) {
            String s1 = q.remove();
            System.out.print(s1 + " ");
            q.add(s1 + "0");
            q.add(s1 + "1");
        }
        System.out.println();
    }

    // ==================================================
    // Minimum Cost to Connect Ropes (Greedy + PriorityQueue)
    // ==================================================
    public static int minCost(int arr[]) {
        PriorityQueue<Integer> pq = new PriorityQueue<>();

        for (int i = 0; i < arr.length; i++) {
            pq.add(arr[i]);
        }

        int cost = 0;
        while (pq.size() > 1) {
            int a = pq.poll();
            int b = pq.poll();
            cost += a + b;
            pq.add(a + b);
        }
        return cost;
    }

    // ==================================================
    // Main Method (Testing)
    // ==================================================
    public static void main(String[] args) {

        // Stack using Deque
        StackUsingDeque s = new StackUsingDeque();
        s.push(1);
        s.push(2);
        s.push(3);
        System.out.println("Stack Pop: " + s.pop());

        // Queue using Deque
        QueueUsingDeque q = new QueueUsingDeque();
        q.add(10);
        q.add(20);
        q.add(30);
        System.out.println("Queue Remove: " + q.remove());

        // Binary Numbers
        printBinary(10);

        // Minimum Cost
        int arr[] = {1, 2, 5, 10};
        System.out.println("Min Cost: " + minCost(arr));
    }
}
