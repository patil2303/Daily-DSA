import java.util.*;

public class Greedy_Day3_Advanced {

    static int ans = Integer.MAX_VALUE;

    // ---------------- Partition Array into K Subarrays ----------------
    public static void solve(int arr[], int k, int index, int sum, int maxSum) {
        if (k == 1) {
            for (int i = index; i < arr.length; i++)
                sum += arr[i];
            maxSum = Math.max(maxSum, sum);
            ans = Math.min(ans, maxSum);
            return;
        }

        sum = 0;
        for (int i = index; i < arr.length; i++) {
            sum += arr[i];
            solve(arr, k - 1, i + 1, sum, Math.max(maxSum, sum));
        }
    }

    // ---------------- Job Sequencing ----------------
    static class Job {
        int id, deadline, profit;
        Job(int id, int d, int p) {
            this.id = id;
            deadline = d;
            profit = p;
        }
    }

    public static void jobSequencing() {
        int jobsInfo[][] = {{4,20},{1,10},{1,40},{1,30}};
        ArrayList<Job> jobs = new ArrayList<>();

        for (int i = 0; i < jobsInfo.length; i++)
            jobs.add(new Job(i, jobsInfo[i][0], jobsInfo[i][1]));

        jobs.sort((a,b) -> b.profit - a.profit);

        int time = 0, profit = 0;
        for (Job j : jobs) {
            if (j.deadline > time) {
                profit += j.profit;
                time++;
            }
        }
        System.out.println("Job profit: " + profit);
    }

    // ---------------- Chocola Problem ----------------
    public static void chocola() {
        Integer ver[] = {2,1,3,1,4};
        Integer hor[] = {4,1,2};

        Arrays.sort(ver, Comparator.reverseOrder());
        Arrays.sort(hor, Comparator.reverseOrder());

        int h = 0, v = 0, hp = 1, vp = 1, cost = 0;

        while (h < hor.length && v < ver.length) {
            if (ver[v] <= hor[h]) {
                cost += hor[h++] * vp;
                hp++;
            } else {
                cost += ver[v++] * hp;
                vp++;
            }
        }

        while (h < hor.length) cost += hor[h++] * vp;
        while (v < ver.length) cost += ver[v++] * hp;

        System.out.println("Min chocola cost: " + cost);
    }

    public static void main(String[] args) {
        int arr[] = {1,2,3,4,6,7,8};
        solve(arr, 3, 0, 0, 0);
        System.out.println("Min max partition sum: " + ans);

        jobSequencing();
        chocola();
    }
}
